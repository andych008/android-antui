<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.alipay.mobile.antui.viewdemo.view.DemoTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        aui:titleText="TabBar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.alipay.mobile.antui.viewdemo.view.BaseHeadView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            aui:titleText="TabBar" />

        <!-- AUTabBarItem start -->

        <com.alipay.mobile.antui.basic.AULinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@com.alipay.mobile.antui:drawable/drawable_bg_top_line"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.alipay.mobile.antui.bar.AUTabBarItem
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:text="标签1"
                aui:topIconSid="@drawable/tab_icon" />

            <com.alipay.mobile.antui.bar.AUTabBarItem
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:text="标签2"
                aui:topIconSid="@drawable/tab_icon" />

            <com.alipay.mobile.antui.bar.AUTabBarItem
                android:id="@+id/tab_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:text="标签3"
                aui:topIconSid="@drawable/tab_icon" />


            <com.alipay.mobile.antui.bar.AUTabBarItem
                android:id="@+id/tab_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:text="标签4"
                aui:textColor="@color/tabbar_text_color1"
                aui:topIconSid="@drawable/tab_bar_alipay" />

        </com.alipay.mobile.antui.basic.AULinearLayout>

        <!-- AUTabBarItem end -->



        <com.alipay.mobile.antui.basic.AULinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="30dp"
            android:background="@com.alipay.mobile.antui:drawable/drawable_bg_top_line"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.alipay.mobile.antui.bar.AUTabBarItem
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:text="标签1"
                aui:topIconSid="@drawable/tab_icon" />

            <com.alipay.mobile.antui.bar.AUTabBarItem
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:text="标签2"
                aui:topIconSid="@drawable/tab_icon" />

            <com.alipay.mobile.antui.bar.AUTabBarItem
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:text="标签3"
                aui:topIconSid="@drawable/tab_icon" />

        </com.alipay.mobile.antui.basic.AULinearLayout>
    </LinearLayout>

    <com.alipay.mobile.antui.viewdemo.view.BaseFootView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>