<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.alipay.mobile.antui.viewdemo.view.DemoTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        aui:titleText="Picker" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.alipay.mobile.antui.viewdemo.view.BaseHeadView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            aui:titleText="Picker" />

        <com.alipay.mobile.antui.basic.AULinearLayout
            android:orientation="vertical"
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.alipay.mobile.antui.basic.AUAssistLabelView
                android:text="时间选择器"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.alipay.mobile.antui.input.AUInputBox
                android:id="@+id/date_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                aui:listItemType="top"
                aui:inputName="当前选择"
                />

            <com.alipay.mobile.antui.basic.AUAssistLabelView
                android:text="日期选择器"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.alipay.mobile.antui.input.AUInputBox
                android:id="@+id/time_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                aui:listItemType="top"
                aui:inputName="当前选择"
                />

            <com.alipay.mobile.antui.basic.AUAssistLabelView
                android:text="级联选择器"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.alipay.mobile.antui.input.AUInputBox
                android:id="@+id/data_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                aui:listItemType="top"
                aui:inputName="当前选择"
                />

            <com.alipay.mobile.antui.basic.AUAssistLabelView
                android:text="单项选择器"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                aui:isHead="true"/>
            <com.alipay.mobile.antui.input.AUInputBox
                android:id="@+id/option_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                aui:listItemType="top"
                aui:inputName="当前选择" />

            <com.alipay.mobile.antui.viewdemo.view.BaseFootView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.alipay.mobile.antui.basic.AULinearLayout>


    </LinearLayout>





</LinearLayout>