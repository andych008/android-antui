<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.alipay.mobile.antui.viewdemo.view.DemoTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        aui:titleText="Input" />

    <com.alipay.mobile.antui.basic.AUScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.alipay.mobile.antui.viewdemo.view.BaseHeadView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                aui:titleText="Input" />

            <com.alipay.mobile.antui.basic.AUAssistLabelView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Input自动聚焦"
                aui:isHead="true" />

            <com.alipay.mobile.antui.input.AUInputBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                aui:inputHint="暗提示"/>

            <com.alipay.mobile.antui.basic.AUAssistLabelView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Input最大输入长度"
                aui:isHead="true" />

            <com.alipay.mobile.antui.input.AUInputBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                aui:inputHint="最大输入长度为10"
                aui:maxLength="10"/>

            <com.alipay.mobile.antui.basic.AUAssistLabelView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="输入数字的input"
                aui:isHead="true" />

            <com.alipay.mobile.antui.input.AUInputBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                aui:inputHint="这是一个数字输入框"
                aui:inputType="textNumber"/>

            <com.alipay.mobile.antui.basic.AUAssistLabelView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="输入密码的input"
                aui:isHead="true" />

            <com.alipay.mobile.antui.input.AUInputBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                aui:inputHint="这是一个密码输入框"
                aui:inputType="textPassword"/>


            <com.alipay.mobile.antui.basic.AUAssistLabelView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="输入小数点的input"
                aui:isHead="true" />

            <com.alipay.mobile.antui.input.AUInputBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                aui:inputHint="带小数点的数字键盘"
                aui:inputType="textDecimal"/>

            <com.alipay.mobile.antui.basic.AUAssistLabelView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="输入身份证的input"
                aui:isHead="true" />

            <com.alipay.mobile.antui.input.AUInputBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                aui:inputHint="身份证输入键盘"/>

            <com.alipay.mobile.antui.basic.AUAssistLabelView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="标题超长"
                aui:isHead="true" />

            <com.alipay.mobile.antui.input.AUInputBox
                android:id="@+id/safeInputBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                aui:inputName="双项输入"
                aui:listItemType="top" />

            <com.alipay.mobile.antui.input.AUInputBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                aui:inputHint="暗提示右移与标题间隔15px"
                aui:inputName="最长可六个字"
                aui:listItemType="center" />

            <com.alipay.mobile.antui.basic.AUAssistLabelView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="单项输入"
                aui:isHead="true" />

            <com.alipay.mobile.antui.input.AUInputBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                aui:inputHint="暗提示"
                aui:inputName="单项输入" />

            <com.alipay.mobile.antui.basic.AUAssistLabelView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="多项输入"
                aui:isHead="true" />

            <com.alipay.mobile.antui.input.AUInputBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                aui:inputHint="暗提示"
                aui:inputName="多项输入"
                aui:listItemType="top" />

            <com.alipay.mobile.antui.input.AUInputBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                aui:inputHint="暗提示"
                aui:inputName="多项输入"
                aui:listItemType="center" />

            <com.alipay.mobile.antui.input.AUInputBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                aui:inputHint="暗提示"
                aui:inputName="多项输入"
                aui:listItemType="bottom" />

            <com.alipay.mobile.antui.basic.AUAssistLabelView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="组合输入"
                aui:isHead="true" />

            <com.alipay.mobile.antui.input.AUInputBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                aui:inputHint="请输入真实姓名"
                aui:inputName="姓名"
                aui:listItemType="top" />


            <com.alipay.mobile.antui.input.AUTextCodeInputBox
                android:id="@+id/au_textcode_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                aui:listItemType="center" />

            <com.alipay.mobile.antui.input.AUInputBox
                android:id="@+id/date_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                aui:inputName="日期"
                aui:listItemType="center" />

            <com.alipay.mobile.antui.input.AUInputBox
                android:id="@+id/time_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                aui:inputName="时间"
                aui:listItemType="bottom" />

            <com.alipay.mobile.antui.viewdemo.view.BaseFootView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </com.alipay.mobile.antui.basic.AUScrollView>

</LinearLayout>