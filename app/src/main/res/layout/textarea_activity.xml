<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.alipay.mobile.antui.viewdemo.view.DemoTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        aui:titleText="Textarea" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.alipay.mobile.antui.viewdemo.view.BaseHeadView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            aui:titleText="Textarea" />

        <com.alipay.mobile.antui.basic.AULinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.alipay.mobile.antui.basic.AUAssistLabelView
                android:text="输入框高度固定，自动聚焦的textarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.alipay.mobile.antui.input.AUParagraphInputBox
                android:layout_marginTop="12dp"
                aui:inputHint="请输入不少于10个字的描述"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.alipay.mobile.antui.input.AUParagraphInputBox>
        </com.alipay.mobile.antui.basic.AULinearLayout>
    </LinearLayout>

    <com.alipay.mobile.antui.viewdemo.view.BaseFootView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>