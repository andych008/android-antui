<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.alipay.mobile.antui.viewdemo.view.DemoTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        aui:titleText="Agreement" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.alipay.mobile.antui.viewdemo.view.BaseHeadView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            aui:titleText="Agreement" />

        <com.alipay.mobile.antui.basic.AULinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@com.alipay.mobile.antui:color/AU_COLOR_UNIVERSAL_BG"/>

            <com.alipay.mobile.antui.profession.AUAgreementView
                android:id="@+id/agreement_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.alipay.mobile.antui.basic.AUButton
                style="@com.alipay.mobile.antui:style/mainButtonStyle"
                android:layout_marginLeft="@com.alipay.mobile.antui:dimen/AU_MARGIN_UNIVERSAL"
                android:layout_marginRight="@com.alipay.mobile.antui:dimen/AU_MARGIN_UNIVERSAL"
                android:clickable="true"
                android:text="同意并授权" />

        </com.alipay.mobile.antui.basic.AULinearLayout>

    </LinearLayout>

    <com.alipay.mobile.antui.viewdemo.view.BaseFootView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>