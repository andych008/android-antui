<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui"
    android:layout_height="match_parent">

    <com.alipay.mobile.antui.basic.AULinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.alipay.mobile.antui.viewdemo.view.DemoTitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_bar"
            aui:titleText="Sreening" />
        <com.alipay.mobile.antui.viewdemo.view.BaseHeadView
            aui:titleText="Sreening"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.alipay.mobile.antui.viewdemo.view.BaseHeadView>


        <com.alipay.mobile.antui.basic.AUButton
            style="@com.alipay.mobile.antui:style/subButtonStyle"
            android:layout_margin="12dp"
            android:id="@+id/single_filter"
            android:clickable="true"
            android:text="单项选择" />
        <com.alipay.mobile.antui.basic.AUButton
            style="@com.alipay.mobile.antui:style/subButtonStyle"
            android:layout_margin="12dp"
            android:clickable="true"
            android:id="@+id/multi_filter"
            android:text="多项选择" />

    </com.alipay.mobile.antui.basic.AULinearLayout>

    <com.alipay.mobile.antui.viewdemo.view.BaseFootView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>