<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.alipay.mobile.antui.viewdemo.view.DemoTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        aui:titleText="CheckBox" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.alipay.mobile.antui.viewdemo.view.BaseHeadView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            aui:titleText="CheckBox" />

        <com.alipay.mobile.antui.basic.AULinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.alipay.mobile.antui.basic.AUAssistLabelView
                android:text="默认样式"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.alipay.mobile.antui.basic.AULinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- AUCheckIcon start -->
                <com.alipay.mobile.antui.common.AUCheckIcon
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    aui:checkIconState = "checked"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="6dp" />
                <com.alipay.mobile.antui.basic.AUTextView
                    android:text="选中"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.alipay.mobile.antui.common.AUCheckIcon
                    android:id="@+id/check_icon"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <com.alipay.mobile.antui.basic.AUTextView
                    android:text="未选中"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.alipay.mobile.antui.common.AUCheckIcon
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    aui:checkIconState = "cannot_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     />
                <com.alipay.mobile.antui.basic.AUTextView
                    android:text="不可勾选"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- AUCheckIcon end -->

            </com.alipay.mobile.antui.basic.AULinearLayout>
        </com.alipay.mobile.antui.basic.AULinearLayout>


        <com.alipay.mobile.antui.basic.AULinearLayout
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.alipay.mobile.antui.basic.AUAssistLabelView
                android:text="复选列表项"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.alipay.mobile.antui.tablelist.AUCheckBoxListItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                aui:listItemType="top"
                aui:listLeftText="多项选择列表" />

            <com.alipay.mobile.antui.tablelist.AUCheckBoxListItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                aui:checkIconState="checked"
                aui:listShowArrow="false"
                aui:listItemType="center"
                aui:listLeftText="多项选择列表" />

            <com.alipay.mobile.antui.tablelist.AUCheckBoxListItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                aui:listShowArrow="false"
                aui:checkIconState="cannot_uncheck"
                aui:listItemType="bottom"
                aui:listLeftText="多项选择列表" />

            <com.alipay.mobile.antui.tablelist.AUCheckBoxListItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                aui:listShowArrow="false"
                aui:checkIconState="cannot_check"
                aui:listItemType="bottom"
                aui:listLeftText="多项选择列表" />

        </com.alipay.mobile.antui.basic.AULinearLayout>



    </LinearLayout>

    <com.alipay.mobile.antui.viewdemo.view.BaseFootView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>